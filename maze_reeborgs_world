#My solution to the Reeborg's Maze game. https://reeborg.ca/

def turn_right():
    turn_left()
    turn_left()
    turn_left()

def find_way():
    if wall_on_right():
        if front_is_clear():
            move()
        else:
            turn_left()
    else:
        turn_right()
        move()
        if right_is_clear():
            turn_right()
            while front_is_clear():
                move()

while not at_goal():
    find_way()


        
     
    
